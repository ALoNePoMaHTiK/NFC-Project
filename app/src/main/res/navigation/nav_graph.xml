<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/startFragment">

    <fragment
        android:id="@+id/authFragment"
        android:name="com.example.nfcproject.AuthFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_auth" >
        <action
            android:id="@+id/action_authFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.nfcproject.MainFragment"
        android:label="fragment_data_send"
        tools:layout="@layout/fragment_main" />
    <fragment
        android:id="@+id/startFragment"
        android:name="com.example.nfcproject.StartFragment"
        android:label="fragment_start"
        tools:layout="@layout/fragment_start" >
        <action
            android:id="@+id/action_startFragment_to_authFragment"
            app:destination="@id/authFragment" />
        <action
            android:id="@+id/action_startFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
        <action
            android:id="@+id/action_startFragment_to_student_singIn"
            app:destination="@id/student_singIn" />
        <action
            android:id="@+id/action_startFragment_to_waitingAccept"
            app:destination="@id/waitingAccept" />
    </fragment>
    <fragment
        android:id="@+id/studentAuth"
        android:name="com.example.nfcproject.StudentAuth"
        android:label="fragment_student_auth"
        tools:layout="@layout/fragment_student_auth" />
    <fragment
        android:id="@+id/student_singIn"
        android:name="com.example.nfcproject.student_singIn"
        android:label="student_singIn"
        tools:layout="@layout/fragment_student_sing_in"
        >
        <action
            android:id="@+id/action_student_singIn_to_waitingAccept"
            app:destination="@id/waitingAccept" />
    </fragment>
    <fragment
        android:id="@+id/waitingAccept"
        android:name="com.example.nfcproject.WaitingAccept"
        android:label="WaitingAccept"
        tools:layout="@layout/fragment_waiting_accept">
        <action
            android:id="@+id/action_waitingAccept_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/navigationMenu"
        android:name="com.example.nfcproject.navigationMenu"
        android:label="navigationMenu"
        tools:layout="@layout/fragment_navigation_menu"/>
</navigation>